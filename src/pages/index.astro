---
import Layout from "../layouts/BaseLayout.astro";
import Intro from "../components/atoms/Intro.astro";
import Services from "../components/molecules/Services.astro";
import { sanityClient } from "sanity:client";
import homeQuery from "../lib/sanity/queries/homeQuery";

const homepage = await sanityClient.fetch(homeQuery);
const { intro, services } = homepage;
---

<Layout>
  <div class="flex flex-col gap-20 md:gap-40">
    <Intro text={intro} />
    <Services services={services} />
  </div>
</Layout>
