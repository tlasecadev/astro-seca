---
import Container from "../atoms/Container.astro";
---

<footer>
  <Container>
    <div class="pb-12 md:pb-20 flex justify-center">
      <div class="flex gap-8 flex-wrap items-center justify-center">
        <!-- badge -->
        <div
          class="flex justify-center text-center rounded-12 p-4 border-white rounded-[50%] border-2 shrink-0 -rotate-10 hover:-rotate-5 duration-250"
        >
          <span class="uppercase leading-tight font-heading text-sm pointer-events-none">Licensed<br /> & Insured</span>
        </div>
        <!-- copyright -->
        <div class="flex flex-col gap-4 leading-tight text-center sm:text-left">
          <span class="text-sm">Servicing on Saturday and Sunday to avoid interruption.</span>
          <span class="text-xs">&#169; Seca Services LLC. All rights reserved.</span>
        </div>
      </div>
    </div>
  </Container>
</footer>
