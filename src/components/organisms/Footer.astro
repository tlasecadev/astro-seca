---
import Container from "../atoms/Container.astro";
---

<Container>
  <div class="py-12 flex justify-center">
    <div class="flex gap-8 flex-wrap items-center">
      <!-- badge -->
      <div
        class="flex justify-center text-center rounded-12 p-4 border-white rounded-[50%] border-2 shrink-0 -rotate-10 hover:-rotate-5 duration-300"
      >
        <span class="uppercase leading-tight font-heading text-sm pointer-events-none">Licensed<br /> & Insured</span>
      </div>
      <!-- copyright -->
      <div class="flex flex-col gap-4 leading-tight">
        <span class="text-sm">Servicing on Saturday and Sundays to avoid interruption.</span>
        <span class="text-xs">&#169; Seca Services LLC. All rights reserved.</span>
      </div>
    </div>
  </div>
</Container>
